#include <iostream>
#include <string>
using namespace std;

int main() {
    string frase;
    int contador = 0;

    cout << "digite uma frase: ";
    getline(cin, frase); // lê a frase inteira, incluindo espaços

    for (int i = 0; i < frase.length(); i++) {
        char c = tolower(frase[i]); // converte para minúsculo
        if (c == 'a' || c == 'e' || c == 'i' || c == 'o' || c == 'u') {
            contador++;
        }
    }

    cout << "a frase possui " << contador << " vogais." << endl;

    return 0;
}