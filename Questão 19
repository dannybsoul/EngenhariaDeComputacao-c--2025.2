#include <iostream>
using namespace std;

int main() {
    int numero, original, reverso = 0;

    cout << "digite um numero inteiro: ";
    cin >> numero;

    original = numero;

    // Trabalhar com valor absoluto (se o usuário digitar número negativo)
    int n = abs(numero);

    while (n > 0) {
        int digito = n % 10;      // pega o último dígito
        reverso = reverso * 10 + digito; // constrói o número invertido
        n /= 10;                  // remove o último dígito
    }

    if (abs(original) == reverso) {
        cout << original << " e um palindromo." << endl;
    } else {
        cout << original << " nao e um palindromo." << endl;
    }

    return 0;
}